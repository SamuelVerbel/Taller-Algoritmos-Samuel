import java.util.Scanner;

public class CalculoTotal {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        final double IVA = 0.19; // IVA constante del 19%
        double subtotal = 0;

        while (true) {
            System.out.print("Ingrese el precio del producto (o -1 para terminar): ");
            double precio = scanner.nextDouble();
            if (precio == -1) break;

            System.out.print("Ingrese la cantidad del producto: ");
            int cantidad = scanner.nextInt();

            if (precio > 0 && cantidad > 0) {
                double resultado = precio * cantidad;
                subtotal += resultado;
                System.out.println("Valor por producto: " + resultado);
            } else {
                System.out.println("Por favor ingrese valores positivos.");
            }
        }

        double iva = subtotal * IVA;
        double totalPagar = subtotal + iva;

        System.out.println("Subtotal: " + subtotal);
        System.out.println("IVA: " + iva);
        System.out.println("Total a pagar: " + totalPagar);
    }
}
